<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', { title: 'Contacts Dashboard', javascriptFiles: ['https://cdn.jsdelivr.net/npm/faker@5.5.3/dist/faker.min.js'] }) %>
<body>
  <div class="grid">
    <%- include('partials/header.ejs') %>
    <aside>
        <div class="section">
            <h4>Contacts</h4>
            <ul>
                <li><a href="#" class="selected">All Contacts</a></li>
                <li><a href="#">Recent Contacts</a></li>
                <li><a href="#">Inactive Contacts</a></li>
            </ul>
        </div>
    </aside>
    <div class="list">
        <div>
            <div class="list-head">
                <h1>Contacts</h1>
                <button id="createContact">Create New Contact</button>
            </div>                
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Company</th>
                        <th>Created Date</th>
                        <th>Last Activity Date</th>
                    </tr>
                </thead>
                <tbody id="contactsBody">
                    <!-- Contact rows will be populated here via JS -->
                </tbody>
            </table>
        </div>
        <script src="scripts/contacts.js"></script>
        <div id="contactModal" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background-color:rgba(0,0,0,0.5);">
          <div style="width: 400px; margin:100px auto; background-color:white; padding:20px; border-radius:10px;">
              <h2>Create New Contact</h2>
              <label>First Name: </label><input id="firstName" type="text"/><br/><br/>
              <label>Last Name: </label><input id="lastName" type="text"/><br/><br/>
              <label>Email: </label><input id="email" type="email"/><br/><br/>
              <label>Phone: </label><input id="phone" type="tel"/><br/><br/>
              <label>Street: </label><input id="street" type="text"/><br/><br/>
              <label>City: </label><input id="city" type="text"/><br/><br/>
              <label>State: </label><input id="state" type="text"/><br/><br/>
              <label>Postal Code: </label><input id="postalCode" type="text"/><br/><br/>
              <label>Country: </label><input id="country" type="text"/><br/><br/>
              <label>Job Title: </label><input id="jobTitle" type="text"/><br/><br/>
              <label>Company: </label><input id="company" type="text"/><br/><br/>
              <button id="saveContact">Save</button>
              <button id="cancelContact">Cancel</button>
              <button id="autoFillContact">Auto-fill</button>
          </div>
    </div>

  </div>
  
</div>

</body>
</html>
