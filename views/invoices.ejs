<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head', { title: 'Webhooks', javascriptFiles: ['https://cdn.runalloy.com/scripts/embedded.js'] }) %>
<body>
  <%- include('partials/header.ejs') %>
  <div class="main-content">
    <aside class="sidebar">
        <div class="section">
            <h3>Invoices Dashboard</h3>
            <ul>
                <li><a href="#" class="selected">All Invoices</a></li>
                <li><a href="#">Pending Invoices</a></li>
                <li><a href="#">Paid Invoices</a></li>
            </ul>
        </div>
    </aside>

    <div class="integration-container">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <h1>Invoices Dashboard</h1>
            <button id="syncInvoices" disabled>Sync Selected Invoices</button>
        </div>                
        <table>
            <thead>
                <tr>
                    <th>Select</th>
                    <th>Invoice ID</th>
                    <th>Customer</th>
                    <th>Details</th>
                    <th>Issue Date</th>
                    <th>Due Date</th>
                    <th>Total Amount</th>
                    <th>Status</th>
                    <th>Type</th>
                </tr>
            </thead>
            <tbody id="invoicesBody">
                <!-- Invoice rows will be populated here via JS -->
            </tbody>
        </table>
    </div>
  </div>
  
  <script src="scripts/invoices.js"></script>
</body>
</html>
